<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/white">

    <!-- Fixed Toolbar with Zaza Legacy Wines Logo and Title -->
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="183dp"
        android:fitsSystemWindows="true"
        android:background="@drawable/header_3">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/left_logo"
                android:layout_width="148dp"
                android:layout_height="155dp"
                android:layout_marginStart="120dp"
                android:contentDescription="Zaza Legacy Wines Logo"
                android:scaleType="fitCenter"
                android:src="@drawable/logo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.571" />

            <ImageView
                android:id="@+id/menu_button"
                android:layout_width="@dimen/toolbar_icon_size"
                android:layout_height="@dimen/toolbar_icon_size"
                android:layout_marginEnd="328dp"
                android:contentDescription="Menu Button"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_view_headline_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.496" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>

    <!-- "Frequently Asked Questions" section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Frequently Asked Questions"
        android:textColor="@color/winred"
        android:textSize="26sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="20dp" />

    <!-- Scrollable Content Section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- FAQ Buttons and Expandable Answers -->

            <Button
                android:id="@+id/btnDeliveriesFAQ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_background"
                android:text="Deliveries"
                android:padding="12dp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tvDeliveryAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_background"
                android:padding="12dp"
                android:textColor="@android:color/white"
                android:text="Place"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnAddictionHelpFAQ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_background"
                android:text="Addiction Helpline"
                android:padding="12dp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tvAddictionHelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_background"
                android:padding="12dp"
                android:textColor="@android:color/white"
                android:text="We recommend receiving aid from Alcoholics Anonymous (AA)"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnReturnFAQ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_background"
                android:text="Return Policy"
                android:padding="12dp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tvReturn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_background"
                android:padding="12dp"
                android:textColor="@android:color/white"
                android:text="Here is the answer for Return policy FAQ"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnOrderOutOfStockFAQ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_background"
                android:text="Order Out of stock"
                android:padding="12dp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tvOrderOutOfStock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_background"
                android:padding="12dp"
                android:textColor="@android:color/white"
                android:text="Here is the answer for Order Out of Stock FAQ"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnPaymentMethodFAQ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_background"
                android:text="Payment Methods"
                android:padding="12dp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tvPaymentMethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_background"
                android:padding="12dp"
                android:textColor="@android:color/white"
                android:text="Here is the answer for Payment Methods FAQ"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnLegalAgeFAQ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_background"
                android:text="Legal Drinking Age To Purchase"
                android:padding="12dp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tvLegalAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_background"
                android:padding="12dp"
                android:textColor="@android:color/white"
                android:text="Here is the answer for Legal Drinking Age FAQ"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnCancelFAQ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_background"
                android:text="Cancellation"
                android:padding="12dp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tvCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_background"
                android:padding="12dp"
                android:textColor="@android:color/white"
                android:text="Here is the answer for Cancellation FAQ"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>