<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/barrelbackground"  <ackground image -->
    android:padding="16dp"
    android:orientation="vertical">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:gravity="center_horizontal">

<!-- Header Image (Brand) -->
<ImageView
    android:id="@+id/logo_image"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/zaza_legacy_logo"
    android:contentDescription="Zaza Legacy Wines"
    android:layout_marginBottom="16dp"/>

<!-- Wine Name -->
<TextView
    android:id="@+id/wine_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Natural Sweet Rose"
    android:textSize="24sp"
    android:textStyle="bold"
    android:textColor="@android:color/white"
    android:gravity="center"
    android:layout_marginBottom="16dp"/>

<!-- Wine Image -->
<ImageView
    android:id="@+id/wine_image"
    android:layout_width="200dp"
    android:layout_height="300dp"
    android:src="@drawable/natural_sweet_rose"
    android:layout_gravity="center"
    android:contentDescription="Natural Sweet Rose"
    android:layout_marginBottom="16dp"/>

<!-- Wine Details -->
<TextView
    android:id="@+id/wine_origin"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Wine of Origin - Stellenbosch"
    android:textSize="16sp"
    android:textColor="@android:color/white"
    android:gravity="center"
    android:layout_marginBottom="16dp"/>

<TextView
    android:id="@+id/wine_bouquet"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Bouquet: Rose Petals, Cotton Candy & Raspberries on the nose."
    android:textSize="14sp"
    android:textColor="@android:color/white"
    android:gravity="center"
    android:layout_marginBottom="8dp"/>

<TextView
    android:id="@+id/wine_taste"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Taste: Red/Pink Fruit: Summer Strawberries with the freshness of Watermelon."
    android:textSize="14sp"
    android:textColor="@android:color/white"
    android:gravity="center"
    android:layout_marginBottom="16dp"/>

<!-- Price -->
<TextView
    android:id="@+id/wine_price"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="R 500"
    android:textSize="18sp"
    android:textStyle="bold"
    android:textColor="@android:color/white"
    android:gravity="center"
    android:layout_marginBottom="16dp"/>

<!-- Add to Cart Button -->
<Button
    android:id="@+id/add_to_cart_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Add to Cart"
    android:padding="10dp"
    android:textSize="18sp"
    android:backgroundTint="@android:color/black"
    android:textColor="@android:color/white"/>
</LinearLayout>

    <!-- Footer (Age Restriction) -->
<TextView
android:id="@+id/wine_footer"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="DRINK RESPONSIBLY. NOT FOR SALE TO PERSONS UNDER THE AGE OF 18"
android:textSize="12sp"
android:textColor="@android:color/white"
android:gravity="center"
android:layout_marginTop="16dp"/>
    </ScrollView>
